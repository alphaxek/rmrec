#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/d/GitHub/rmrec/node_modules/copyfiles/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="$NODE_PATH:/mnt/d/GitHub/rmrec/node_modules/copyfiles/node_modules/.pnpm/node_modules"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../../.pnpm/copyfiles@2.4.1/node_modules/copyfiles/node_modules/rimraf/bin.js" "$@"
else
  exec node  "$basedir/../../../.pnpm/copyfiles@2.4.1/node_modules/copyfiles/node_modules/rimraf/bin.js" "$@"
fi
